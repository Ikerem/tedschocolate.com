@model List<Discount>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="text-danger">Discount Page</h4>
            <p>
                İndirim sayfasını düzenleye bilirisin
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th> Başlık </th>
                            <th> Açıklama </th>
                            <th> Fotoğraf </th>


                            <th> Düzenle </th>

                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {


                        <tbody>
                            <tr>
                                <td> @item.title </td>

                                <td> @item.Description.Substring(0, Math.Min(20, item.Description.Length))... </td>

                                <td>
                                    <img src=" @item.ImageUrl" height="250px" width="250px">
                                </td>
                                <td> <a href="/AdminDicount/EditDiscount/@item.Discountid" class="btn btn-inverse-success btn-fw">Düzenle</a> </td>
                            </tr>

                        </tbody>
                    }

                </table>
            </div>
        </div>
    </div>
</div>

