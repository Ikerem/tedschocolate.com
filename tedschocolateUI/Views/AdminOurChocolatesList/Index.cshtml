@model List<OurChocolates>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="text-danger">Ted's Chocolate our products Page</h4>
            <p>
               Çikolata Ürünleri Sayfasını düzenleyebilirsin veya silebilirisin
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                          
                            <th class="text-info"> Başlık </th>
                            <th class="text-info"> Açıklama </th>
                            <th class="text-info"> Fotoğraf </th>
                            <th class="text-info"> Fiyat </th>


                            <th class="text-info"> Düzenle </th>
                            <th class="text-info"> Sil </th>

                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {


                        <tbody>
                            <tr>
                             
                                <td> @item.title </td>

                                <td> @item.Description.Substring(0, Math.Min(10, item.Description.Length))... </td>

                                <td>
                                    <img src=" @item.Image" height="250px" width="250px">
                                </td>
                                <td> @item.Price </td>
                                <td> <a href="/AdminOurChocolatesList/EditOurChocolate/@item.OurChocolatesid" class="btn btn-inverse-success btn-fw">Düzenle</a> </td>
                                <td> <a href="/AdminOurChocolatesList/DeleteOurChocolate/@item.OurChocolatesid" class="btn btn-inverse-danger btn-fw">Sil</a> </td>
                            </tr>

                        </tbody>
                    }

                </table>
                <br />

                <a href="/AdminOurChocolatesList/AddOurChocolate/" class="btn btn-inverse-primary btn-fw">Yeni Ürün Ekle</a>
            </div>
        </div>
    </div>
</div>
